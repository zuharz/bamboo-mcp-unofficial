{
  "name": "@zuharz/bamboo-mcp-server",
  "version": "1.2.0",
  "description": "Unofficial MCP server for BambooHR API integration",
  "author": "BambooHR MCP Contributors",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "type": "module",
  "main": "server/bamboo-mcp.js",
  "bin": {
    "bamboo-mcp": "server/bamboo-mcp.js"
  },
  "files": [
    "server/**/*",
    "README.md",
    "LICENSE",
    "manifest.json",
    "icon.png"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zuharz/bamboo-mcp-unofficial.git"
  },
  "homepage": "https://github.com/zuharz/bamboo-mcp-unofficial#readme",
  "bugs": {
    "url": "https://github.com/zuharz/bamboo-mcp-unofficial/issues"
  },
  "keywords": [
    "bamboohr",
    "mcp",
    "model-context-protocol",
    "claude",
    "hr",
    "human-resources",
    "workforce-analytics"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.5.0"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "build:dxt": "./scripts/build-dxt.sh",
    "dev": "npm run build && node server/index.js",
    "test": "jest",
    "test:compliance": "jest test/protocol-compliance.test.ts",
    "lint": "eslint .",
    "lint:src": "eslint src/",
    "lint:server": "eslint server/",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run typecheck",
    "validate:protocol": "node -e \"const pkg = require('./package.json'); const version = pkg.dependencies['@modelcontextprotocol/sdk'].replace(/[^\\d.]/g, ''); const parts = version.split('.').map(Number); if (parts[0] < 1 || (parts[0] === 1 && parts[1] < 17)) { console.error('❌ MCP SDK version too old for protocol 2025-06-18'); process.exit(1); } else { console.log('✅ MCP SDK supports latest protocol (2025-06-18)'); }\"",
    "prepack": "npm run build",
    "publish:dry": "./scripts/release.sh --dry-run",
    "publish:gh": "./scripts/release.sh",
    "release": "./scripts/release.sh",
    "build-only": "./scripts/release.sh --build-only"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
