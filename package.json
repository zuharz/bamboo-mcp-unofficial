{
  "name": "bamboo-mcp-server",
  "version": "1.0.0",
  "description": "Unofficial open source Model Context Protocol (MCP) server for BambooHR API integration with Claude Desktop",
  "author": "BambooHR MCP Contributors",
  "license": "MIT",
  "main": "dist/bamboo-mcp.js",
  "types": "dist/bamboo-mcp.d.ts",
  "bin": {
    "bamboo-mcp": "dist/bamboo-mcp.js"
  },
  "files": [
    "dist/**/*",
    "scripts/build.sh",
    "README.md",
    "LICENSE",
    "manifest.json",
    ".github/assets/logo.png"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zuharz/bamboo-mcp-unofficial.git"
  },
  "homepage": "https://github.com/zuharz/bamboo-mcp-unofficial#readme",
  "bugs": {
    "url": "https://github.com/zuharz/bamboo-mcp-unofficial/issues"
  },
  "keywords": [
    "bamboohr",
    "mcp",
    "model-context-protocol",
    "claude",
    "hr",
    "human-resources",
    "workforce-analytics"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "dev": "npm run build && node dist/bamboo-mcp.js",
    "test": "jest --config config/jest.config.js",
    "test:unit": "jest --config config/jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config config/jest.config.js --testPathPattern=integration",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --project config/tsconfig.json --noEmit",
    "validate": "npm run build && npm run lint",
    "prepack": "npm run build",
    "setup-hooks": "./scripts/setup-git-hooks.sh",
    "pre-commit": "npm run build && npm run lint"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run build",
      "eslint --fix"
    ]
  }
}
