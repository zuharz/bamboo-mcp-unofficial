{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "server"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "server", "test", "src/**/*.backup.*"]
}
